---
type Props = {
  id: string;
  name: string;
};

const { id, name } = Astro.props;
---

<label for={id}>
  <span><slot /></span>
  <div class="toggle-container">
    <input type="checkbox" id={id} name={name} />
    <span class="toggle"></span>
  </div>
</label>

<style>
  label {
    display: flex;
    align-items: center;
    cursor: pointer;
    gap: 0.5rem;
  }

  .toggle-container {
    position: relative;
    display: inline-block;
    width: 40px;
    height: 20px;
  }

  .toggle-container input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .toggle {
    position: absolute;
    cursor: pointer;
    inset: 0;
    background-color: #eaeaea;
    transition: 0.4s;
    border-radius: 20px;
  }

  .toggle::before {
    position: absolute;
    content: "";
    height: 16px;
    width: 16px;
    left: 2px;
    bottom: 2px;
    background-color: #3854b1;
    transition: 0.4s;
    border-radius: 50%;
  }

  input:checked + .toggle {
    background-color: #eaeaea;
  }

  input:focus + .toggle {
    box-shadow: 0 0 1px var(--tertiary-500);
  }

  input:checked + .toggle::before {
    transform: translateX(20px);
  }
</style>
