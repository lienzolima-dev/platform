<section class="container">
  <h2 class="title">Libro de Reclamos</h2>
  <form>
    <div class="form-grid">
      <div class="form-group">
        <label for="fecha">Fecha de reclamo o queja</label>
        <input type="date" id="fecha" required />
      </div>
      <div class="form-group">
        <label for="nombre">Nombres y Apellidos</label>
        <input type="text" id="nombre" required />
      </div>
      <div class="form-group">
        <label for="dni">DNI</label>
        <input type="text" id="dni" required />
      </div>
      <div class="form-group">
        <label for="email">Correo Electrónico</label>
        <input type="email" id="email" required />
      </div>
      <div class="form-group">
        <label for="telefono">Teléfono</label>
        <input type="tel" id="telefono" required />
      </div>
    </div>
    <div class="form-group">
      <label>Identificación del bien contratado</label>
      <div class="radio-group">
        <label
          ><input type="radio" name="bien" value="servicio" required /> Servicio</label
        >
      </div>
    </div>
    <div class="form-group">
      <label for="descripcion">Descripción</label>
      <textarea id="descripcion" rows="4" required></textarea>
    </div>
    <div class="form-group">
      <label>Detalle de reclamación</label>
      <div class="radio-group">
        <label
          ><input type="radio" name="detalle" value="reclamo" required /> Reclamo</label
        >
        <label
          ><input type="radio" name="detalle" value="queja" required /> Queja</label
        >
      </div>
    </div>
    <div class="form-group">
      <label for="detalle">Detalle</label>
      <textarea id="detalle" rows="4" required></textarea>
    </div>
    <div class="form-group">
      <label for="adicional">Información Adicional</label>
      <textarea id="adicional" rows="4"></textarea>
    </div>
    <button type="submit" class="btn">Enviar</button>
  </form>
</section>

