---
const { description, title, hasArrow, backgroundColor, textColor, img } =
  Astro.props;
import Arrow from "./svgs/Arrow.astro";
---

<div
  class="card"
  style={`background-color: ${backgroundColor}; color: ${textColor}`}
>
  <div class="content">
    <img src={img} class="img" alt="" />
    <h2>{title}</h2>
    <p>{description}</p>
    {hasArrow ? <Arrow class="arrow" /> : null}
  </div>
</div>

<style>
  .card {
    width: 100%;
    height: 450px;
    border-radius: 15px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    position: relative;
    margin: 10px; /* Espaciado entre tarjetas */
    padding: 15px;
  }

  .card:hover {
    transform: scale(1.05);
    transition: transform 0.3s;
    cursor: pointer;
  }

  .content {
    text-align: center;
  }

  h2 {
    margin: 10px 0;
  }

  p {
    font-size: 1rem;
    margin: 5px 0;
    text-align: center;
  }

  /* Imagen dentro de la tarjeta */
  .img {
    width: 50%; /* Se ajusta al ancho de la tarjeta */
    height: auto; /* Mantiene la proporci√≥n de la imagen */
    border-radius: 10px; /* Bordes redondeados para la imagen */
  }

  /*RESPONSIVO */
  @media (max-width: 768px) {
    .card {
      height: auto;
    }
  }
</style>
