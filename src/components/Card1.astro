---
const { title, hasArrow, backgroundColor, textColor } = Astro.props;
---

<div
  class="card"
  style={`background-color: ${backgroundColor}; color: ${textColor}`}
>
  <div class="content">
    <h2>{title}</h2>
    {hasArrow ? <button class="arrow">â†’</button> : null}
  </div>
</div>

<style>
  .card {
    width: 100%;
    height: 300px;
    border-radius: 15px;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    position: relative;
    margin: 10px; /* Espaciado entre tarjetas */
  }
  
  .card:hover {
    transform: scale(1.05);
    transition: transform 0.3s;
  }

  .content {
    text-align: center;
  }

  .arrow {
    position: absolute;
    bottom: 10px;
    right: 10px;
    font-size: 1.5rem;
    color: #ff8c00; /* Color de la flecha */
    background-color: #ff8c00;
    color: aliceblue;
    border-radius: 6px;
  }

  /*RESPONSIVO */
  @media (max-width: 768px) {
    .card {
      height: 200px;
    }
  }
</style>
