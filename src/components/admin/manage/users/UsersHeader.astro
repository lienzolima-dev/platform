---
type Props = {
  usersAmount: number;
};

const { usersAmount } = Astro.props;
---

<div class="container">
  <h2>Usuarios ({usersAmount})</h2>
  <div class="search-input">
    <input
      type="text"
      id="search-input"
      placeholder="Buscar por nombre o email"
    />
    <button id="search-user-btn">Buscar</button>
  </div>
</div>

<script>
  const searchUserBtn = document.getElementById("search-user-btn");
  const searchInput = document.getElementById("search-input");
  try {
    if (!(searchUserBtn instanceof HTMLButtonElement))
      throw new Error("Search user button not found");
    if (!(searchInput instanceof HTMLInputElement))
      throw new Error("Search input not found");

    searchUserBtn.addEventListener("click", () => {
      const searchTerm = searchInput.value.trim();
      const searchUrl = searchTerm
        ? `?search=${encodeURIComponent(searchTerm)}`
        : "?search=";
      window.location.href = searchUrl;
    });
  } catch (e) {
    console.error("Error: ", e);
  }
</script>

<style>
  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .search-input {
    display: flex;
    gap: 1rem;
    width: 100%;
    max-width: 500px;
  }

  h2 {
    margin: 0;
    font-size: 2rem;
    text-wrap: nowrap;
    font-weight: bold;
  }

  input {
    width: 100%;
    padding-inline: 1rem;
  }

  button {
    padding: 0.5rem 1rem;
    background-color: #2b9398;
    color: white;
    border: none;
    border-radius: 0.25rem;
    cursor: pointer;
  }
</style>
