import CheckIcon from "../../svgs/admin/IndexContent/CheckIcon.astro";
---

<!-- TODO: Implement -->
<form action="">
  <input type="text" placeholder="Insertar nuevo recordatorio" />
  <button type="submit">
    <CheckIcon />
  </button>
</form>

<style>
  form {
    width: 100%;
    max-width: none;
    display: flex;
    flex-direction: row;
  }

  input {
    width: 100%;
    padding-inline: 1rem;
  }

  button {
    position: relative;
    background-color: rgb(230, 230, 230);
    height: 40px;
    width: 40px;
    border: none;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  button :global(svg) {
    position: absolute;
    inset: 0;
    margin: auto;
    width: 1rem;
    height: 1rem;
  }
</style>
