---
type Props = {
  username: string;
  email: string;
  cargo: string;
};

const { username, email, cargo } = Astro.props;
---

<div class="container">
  <div class="user-info">
    <h2>{username.toLocaleUpperCase()}</h2>
    <span class="user-info-email">Correo: {email}</span>
  </div>
  <div class="user-role">
    <p>{cargo}</p>
  </div>
</div>

<style>
  .container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 2rem;
    padding-bottom: 2rem;
    background-color: var(--color-white);
    gap: 4rem;
    color: rgb(32, 32, 32);
    border-bottom: 1px solid rgb(197, 197, 197);
  }

  .user-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .user-info h2 {
    margin: 0;
    font-size: 2.5rem;
    font-weight: 700;
  }

  .user-info-email {
    font-size: 1rem;
    color: rgba(55, 55, 55, 0.851);
  }

  .user-role {
    display: flex;
    align-items: center;
  }

  .user-role p {
    margin: 0;
    font-size: 2rem;
    font-weight: 500;
    color: var(--color-gray);
  }

  @media (max-width: 1024px) {
    .container {
      flex-direction: column;
      align-items: start;
      gap: 1rem;
    }
  }
</style>
