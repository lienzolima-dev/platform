---
import BookingDeleteButton from "./BookingDeleteButton.astro";
import BookingEditButton from "./BookingEditButton.astro";

const headers = [
  "Hora",
  "Manicurista",
  "Estado de pago",
  "Sistemas",
  "Extras",
  "Total",
  "Acciones",
];

const bookings = [
  {
    startTime: "10:00",
    endTime: "11:00",
    manincurist: "María",
    paymentType: "Adelanto",
    systems: ["system1", "system2"],
    extras: ["extra1", "extra2"],
    totalPrice: 100,
  },
  {
    startTime: "10:00",
    endTime: "11:00",
    manincurist: "María",
    paymentType: "Adelanto",
    systems: ["system1", "system2"],
    extras: ["extra1", "extra2"],
    totalPrice: 100,
  },
  {
    startTime: "10:00",
    endTime: "11:00",
    manincurist: "María",
    paymentType: "Adelanto",
    systems: ["system1", "system2"],
    extras: ["extra1", "extra2"],
    totalPrice: 100,
  },
  {
    startTime: "10:00",
    endTime: "11:00",
    manincurist: "María",
    paymentType: "Adelanto",
    systems: ["system1", "system2"],
    extras: ["extra1", "extra2"],
    totalPrice: 100,
  },
];
---

<div class="table-wrapper">
  <div class="container">
    <div class="table-head">
      {headers.map((header) => <div>{header}</div>)}
    </div>

    <div class="table-body">
      {
        bookings.map((booking) => (
          <div class="table-row">
            <div>
              {booking.startTime} - {booking.endTime}
            </div>
            <div>{booking.manincurist}</div>
            <div>{booking.paymentType}</div>
            <div>{booking.systems.join(", ")}</div>
            <div>{booking.extras.join(", ")}</div>
            <div>{booking.totalPrice}</div>
            <div class="action-buttons">
              <BookingEditButton />
              <BookingDeleteButton />
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>

<style>
  .table-wrapper {
    overflow-x: auto;
    max-width: 100%;
  }

  .container {
    display: flex;
    flex-direction: column;
    max-width: 100%;
    border: 1px solid #ddd;
    border-radius: 8px;
    min-width: 800px;
    overflow: hidden;
  }

  .table-head {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 1rem;
    padding: 1rem;
    background-color: #2b9398;
    color: white;
    font-weight: bold;
    border-bottom: 2px solid #ddd;
  }

  .table-body {
    display: flex;
    flex-direction: column;
  }

  .table-row {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 1rem;
    padding: 1rem;
    border-bottom: 1px solid #eee;
    transition: background-color 0.2s;
  }

  .table-row:hover {
    background-color: #f1f1f1;
  }

  .action-buttons {
    display: flex;
    gap: 0.5rem;
  }

  .action-buttons button {
    padding: 0.5rem 0.75rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.9rem;
    transition: background-color 0.2s;
    font-family: var(--font-body);
  }

  button.edit {
    background-color: #2b9398;
    color: #fff;
  }

  button.edit:hover {
    background-color: #007f80;
  }

  button.delete {
    background-color: #dc3545;
    color: #fff;
  }

  button.delete:hover {
    background-color: #c82333;
  }
</style>
