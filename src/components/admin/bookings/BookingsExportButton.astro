---
import DownloadIcon from "../../svgs/admin/bookings/DownloadIcon.astro";
---

<bookings-export-button>
  <button>
    <DownloadIcon />
    <span>Exportar</span>
  </button>
</bookings-export-button>

<script>
  class BookingsExportButton extends HTMLElement {
    connectedCallback() {
      this.querySelector("button")?.addEventListener("click", async () => {
        location.href = "/api/export/bookings";
      });
    }
  }

  customElements.define("bookings-export-button", BookingsExportButton);
</script>

<style>
  button {
    display: flex;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 0.25rem;
    cursor: pointer;
    background-color: #38abb1;
    color: white;
  }

  button :global(svg) {
    fill: white;
    width: 1rem;
  }
</style>
