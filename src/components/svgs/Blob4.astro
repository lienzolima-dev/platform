---
import { ulid } from "ulid";

type Props = {
  imgSrc: string;
};

const { imgSrc } = Astro.props;

const uniqueIndentifier = ulid();
const clipPathId = `blob-${uniqueIndentifier}`;
---

<svg
  width="95%"
  viewBox="0 0 353 336"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
>
  <clipPath id={clipPathId}>
    <path
    d="M167.81 0.940011C195.25 0.940011 222.74 -0.0599893 250.13 1.15001C305.26 3.59001 333.47 26.15 342.23 80.57C348.93 122.17 352.86 164.84 351.99 206.9C350.41 283.23 311.58 321.66 231.43 330.38C197.15 334.11 162.5 335.61 128 335.98C56.2698 336.75 21.4998 315.77 8.72982 246.34C-1.63018 190.03 -1.07018 130.34 4.16982 72.96C8.62982 24.22 40.7698 2.96001 90.7898 0.960011C116.42 -0.0399892 142.13 0.790011 167.79 0.790011L167.81 0.940011Z"
    fill="#D23584"></path>
  </clipPath>

  <image
    href={imgSrc}
    clip-path={`url(#${clipPathId})`}
    preserveAspectRatio="xMidYMid slice"
  />
</svg>

<style>
  svg {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
  }

  image {
    width: 100%;
    height: 100%;
  }
</style>