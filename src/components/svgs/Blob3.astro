---
import { ulid } from "ulid";

type Props = {
  imgSrc: string;
};

const { imgSrc } = Astro.props;

const uniqueIndentifier = ulid();
const clipPathId = `blob-${uniqueIndentifier}`;
---

<svg
  width="356"
  height="540"
  viewBox="0 0 356 540"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
>
  <clipPath id={clipPathId}>
    <path
      d="M160.575 538.759C80.7053 543.839 44.4153 517.849 28.3553 440.009C11.5753 358.549 -7.50474 277.009 3.01526 192.789C11.5353 125.059 39.3153 67.3093 95.3453 26.0093C152.355 -15.9907 267.015 -5.45066 316.115 45.5693C341.935 72.3893 352.895 106.349 348.255 141.569C337.975 219.569 346.865 296.239 354.335 373.509C358.885 420.559 351.525 466.029 312.805 499.769C278.865 529.339 235.805 530.689 194.445 536.769C183.305 538.449 171.875 538.159 160.575 538.759Z"
      fill="#E6E5E1"></path>
  </clipPath>

  <image
    href={imgSrc}
    clip-path={`url(#${clipPathId})`}
    preserveAspectRatio="xMidYMid slice"
  />
</svg>

<style>
  image {
    width: 100%;
    height: 100%;
  }
</style>
