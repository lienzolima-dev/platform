---
import { ulid } from "ulid";

type Props = {
  imgSrc: string;
};

const { imgSrc } = Astro.props;

const uniqueIndentifier = ulid();
const clipPathId = `blob-${uniqueIndentifier}`;
---

<svg
  width="357"
  height="542"
  viewBox="0 0 357 542"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
>
  <clipPath id={clipPathId}>
    <path
      d="M195.575 0.616349C275.695 -4.49365 312.105 21.6163 328.205 99.7163C345.045 181.386 364.205 263.166 353.595 347.716C345.085 415.616 317.215 473.536 261.005 514.996C203.805 557.136 88.8254 546.586 39.5354 495.396C13.6354 468.496 2.63536 434.396 7.29536 399.096C17.6054 320.896 8.69536 243.936 1.19536 166.426C-3.36464 119.186 4.00536 73.5663 42.8654 39.7164C76.9154 10.0564 120.115 8.71635 161.595 2.56635C172.775 0.916349 184.245 1.20635 195.575 0.616349Z"
      fill="#E6E5E1"></path>
  </clipPath>

  <image
    href={imgSrc}
    clip-path={`url(#${clipPathId})`}
    preserveAspectRatio="xMidYMid slice"
  />
</svg>

<style>
  image {
    width: 100%;
    height: 100%;
  }
</style>
