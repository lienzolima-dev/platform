---
import "../css/base.css";

type Props = {
  title: string;
};

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  body {
    display: grid;
    grid-template-columns: auto 1fr;
  }

  @media only screen and (max-width: 768px) {
    body {
      display: grid;
      grid-template-columns: 1fr;
    }
  }
</style>
