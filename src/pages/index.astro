---
import BaseLayout from "../layouts/BaseLayout.astro";
import WhyUs from "../components/landing/WhyUs.astro";
import MenuBackground from "../components/svgs/MenuBackground.astro";
import Menu from "../components/landing/Menu.astro";
---

<BaseLayout title="Lienzo Lima">
  <main>
    <h1>Test</h1>
    <p>
      Lorem ipsum, dolor sit amet consectetur adipisicing elit. Perspiciatis a,
      maxime enim harum laudantium unde, aliquid odit in quae ea sit, asperiores
      veritatis illum? Dolore quae cumque sapiente quaerat sint.
    </p>
    <div class="wrapper">
      <WhyUs />
    </div>
    <div class="menu-container">
      <div class="menu-bg">
        <MenuBackground />
      </div>
      <Menu />
    </div>
  </main>
</BaseLayout>

<style>
  .menu-container {
    position: relative;
  }

  .menu-bg {
    position: absolute;
    overflow: hidden;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: -1;
  }

  .menu-bg :global(svg) {
    width: 100vw;
    height: auto;
  }

</style>
