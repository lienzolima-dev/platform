---
import SideBar from "../../../components/admin/SideBar.astro";
import AdminLayout from "../../../layouts/AdminLayout.astro";

const user = Astro.locals.user;

// If the user is not an admin, redirect to the home page
if (!user || user.role !== "admin") return Astro.redirect("/home", 302);
---

<AdminLayout title="Admin">
  <SideBar />
  <div>
    <header>Header</header>
    <main>
      <h1>Manage Users</h1>
      <p>Here you can manage users.</p>
    </main>
  </div>
</AdminLayout>

<style>
  header {
    padding: 1rem;
    background-color: var(--background-light);
    border-bottom: 1px solid red; /* Change this to a color from your palette */
  }

  main {
    padding-top: var(--section-spacing);
    padding-inline: var(--section-spacing);
    padding-bottom: var(--section-spacing);
  }
</style>
