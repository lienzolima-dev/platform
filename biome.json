{
  "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error"
      },
      "suspicious": {
        "useAwait": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "ignore": ["**/*.svelte", "**/*.astro"]
  },
  "overrides": [
    {
      "include": ["**/*.svelte", "**/*.astro"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedLabels": "off",
            "noUnusedVariables": "off"
          },
          "suspicious": {
            "noConfusingLabels": "off"
          },
          "style": {
            "useConst": "off"
          }
        }
      }
    }
  ],
  "files": {
    "ignore": [
      "node_modules",
      "dist",
      "public",
      "./.db",
      "**/.astro",
      ".drizzle"
    ]
  }
}
